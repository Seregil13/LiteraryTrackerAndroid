<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/constraintLayout">


    <TextView
        android:text="@string/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_label"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        tools:text="I Eat Tomatoes"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="-108dp" />

    <TextView
        android:text="@string/translatorSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translator_site_label"
        tools:layout_editor_absoluteY="41dp"
        tools:layout_editor_absoluteX="15dp" />

    <TextView
        tools:text="wuxiaworld.com"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/translator_site"
        tools:layout_editor_absoluteY="38dp"
        tools:layout_editor_absoluteX="-108dp" />

    <TextView
        android:text="@string/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genres_label"
        tools:text="@string/genre"
        tools:layout_editor_absoluteY="58dp"
        tools:layout_editor_absoluteX="0dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genre_list_scroll_container"
        android:visibility="visible"
        tools:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="-108dp">

        <LinearLayout
            android:id="@+id/genre_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        tools:text="Synopsis"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/description_label"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="16dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="67dp"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                tools:text=""
                android:layout_width="match_parent"
                android:layout_height="485dp"
                android:id="@+id/description"
                tools:layout_editor_absoluteY="134dp"
                tools:layout_editor_absoluteX="8dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>