<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:id="@+id/constraintLayout">


    <TextView
        android:text="@string/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_label"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="I Eat Tomatoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        tools:text="I Eat Tomatoes"
        app:layout_constraintLeft_toLeftOf="@+id/translator_site"
        app:layout_constraintTop_toTopOf="@+id/author_label"
        app:layout_constraintBottom_toBottomOf="@+id/author_label" />

    <TextView
        android:text="@string/translatorSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translator_site_label"
        tools:layout_editor_absoluteY="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="wuxiaworld.com"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/translator_site"
        app:layout_constraintLeft_toRightOf="@+id/translator_site_label"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/translator_site_label"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/translator_site_label"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="@string/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genres_label"
        tools:text="@string/genre"
        tools:layout_editor_absoluteY="64dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Synopsis"
        android:layout_width="61dp"
        android:layout_height="20dp"
        android:id="@+id/description_label"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/genre_list"
        android:layout_marginTop="8dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/description_label"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/description" />
        </LinearLayout>
    </ScrollView>

    <GridLayout
        android:layout_width="129dp"
        android:layout_height="32dp"
        android:id="@+id/genre_list"
        app:layout_constraintLeft_toLeftOf="@+id/translator_site"
        app:layout_constraintTop_toTopOf="@+id/genres_label">

    </GridLayout>

</android.support.constraint.ConstraintLayout>